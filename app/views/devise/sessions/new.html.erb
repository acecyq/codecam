<section class="hero is-info is-fullheight has-text-white has-text-centered centerall">
  <div class="columns">
    <div class="column is-6 is-offset-3">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <p class="control has-icons-left has-icons-right">
        
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", type: "email", placeholder: "Email" %>
          <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
      </p>
    </div>

    <div class="field">
      <p class="control has-icons-left">
        <%= f.password_field :password, autocomplete: "off", class: "input", type:"password", placeholder:"Password" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </p>
    </div>

    <br>

    <div class="actions field">
      <p class="control has-text-centered">
        <%= f.submit "Log in", class:"button is-success is-medium"%>
      </p>
    </div>

    <br>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>